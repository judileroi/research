{% extends 'layout.html.twig' %}



{% block body %}
    <h1>Publications Scientifiques</h1>

    <h1 class="noborder text-bold text-warning ">
        [ Article ] {{ publication.titreFr }}
    </h1>
    <div class="well">
        <table class="table table-bordered">
            <tbody>
                {#<tr>#}
                    {#<th>#}
                        {#<img style="border-radius: 35px; margin-left: 20px; width: 100px" src="#}
                        {#{% if publication.user and publication.user.avatar %} {{ asset('uploads/avatar/' ~  publication.user.avatar) }}#}
                        {#{%else%}#}
                        {#{{ asset('images/person-flat.png') }}#}
                        {#{%endif%}#}
                        {#"><br>#}
                    {#</th>#}
                    {#<td>                    <a href="{{ path('auteur_by_list', { 'id': publication.user.id}) }}">  {{ publication.user.nom ~' '~ publication.user.prenom }}</a></td>#}
                {#</tr>#}
                <tr>
                    <th>Date de soumission:</th>
                    <td>{{ publication.date|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Année de Publication:</th>
                    <td>{{ publication.datePubli}}</td>
                </tr>

                <tr>
                    <th>Entité/Laboratoire</th>
                    <td>
                        {% if publication.entite.designation is defined %}
                            {{ publication.entite.designation }}
                        {%endif %}

                    </td>
                </tr>

                <tr>
                    <th>Document type :</th>
                    <td>{{ publication.type }}</td>
                </tr>
                <tr>
                    <th>Discipline(s) :</th>
                        {% if publication.discipline.designation is defined %}

                        <td>{{ publication.discipline.designation }}</td>
                    {%endif %}

                </tr>

            </tbody>
        </table>  

    </div>

    <div class="well">
        <table class="table table-bordered">
            <tbody>

                <tr>
                    <th>Titre </th>
                    <td>{{ publication.titreFr }}</td>
                </tr>

                <tr>
                    <th>Auteurs</th>
                    <td>               
                    {% for ligneaut in publication.ligneauteurs %}

                        <a href="{{ path('auteur_by_list', { 'id': ligneaut.auteur.id}) }}"> {{ ligneaut.auteur.nom }} {{ ligneaut.auteur.prenoms }} [{{ ligneaut.ordre }}]</a>, 
                    {%endfor%}

                </td>
                </tr>  

                <tr>
                    <th>Journal:</th>
                    <td>{{ publication.revue }}</td>
                </tr>

                <tr>
                    <th>Catégorie Journal:</th>
                    <td>{{ publication.revueCategorie }}</td>
                </tr>

                <tr>
                    <th>Impact factor:</th>
                    <td>{{ publication.revueValeur }}</td>
                </tr>
                <tr>
                    <th>Volume Journal:</th>
                    <td>{{ publication.volumeLivre }}</td>
                </tr>

                <tr>
                    <th>DOI:</th>
                    <td>{{ publication.doi }}</td>
                </tr>
                <tr>
                    <th>Resume</th>
                    <td>{{ publication.resume }}</td>
                </tr>

                <tr>
                    <th>Mots clés</th>
                    <td>{{ publication.motCle }}</td>
                </tr>

                <tr>
                    <th>Pages </th>
                    <td>{{ publication.debutPageLivre }} - {{ publication.finPageLivre }}</td>
                </tr>


                <tr>
                    <th>Fichier</th>
                    <td>{% if publication.fichier %}<a  href="{{ asset('uploads/publication/' ~ publication.fichier) }}"><img src="{{ asset('images/pdflogo.png')}}" height="16" />(PDF)</a>{% endif %}</td>
                </tr>

            </tbody>
        </table>


    </div>


{% endblock %}
