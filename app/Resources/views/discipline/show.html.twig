{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Discipline</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discipline.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ discipline.designation }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_discipline_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_discipline_edit', { 'id': discipline.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
